<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ari.itellu.admin.Event.inputEvent">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgphotoEvent"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btnChooseEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pilih Gambar" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextNamaEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Nama " />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextLokasiEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Lokasi" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextDeskripsiEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Deskripsi"
                android:paddingTop="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal:" />

                <TextView
                    android:id="@+id/txtTglEvent"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnDateEvent"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Date" />
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnPostEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_check_black_24dp"
                android:tint="#fff" />


        </LinearLayout>

    </ScrollView>
</FrameLayout>
